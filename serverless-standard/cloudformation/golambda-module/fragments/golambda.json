{
  "Description": "trick-serverless-standard CDK: go aws sdk v1",
  "Resources": {
    "LambdaGoServiceRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": "sts:AssumeRole",
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "ManagedPolicyArns": [
          {
            "Fn::Join": [
              "",
              [
                "arn:",
                {
                  "Ref": "AWS::Partition"
                },
                ":iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
              ]
            ]
          }
        ]
      }
    },
    "LambdaGo": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "DeploymentBucket"
          },
          "S3Key": {
            "Ref": "DeploymentKey"
          }
        },
        "Handler": "main",
        "Role": {
          "Fn::GetAtt": [
            "LambdaGoServiceRole",
            "Arn"
          ]
        },
        "Runtime": "go1.x",
        "MemorySize": 1024,
        "Environment": {
          "Variables": {
            "TableName": {
              "Ref": "Table"
            }
          }
        },
      }
    }
  },
  "Parameters": {
    "DeploymentBucket": {
      "Type": "String",
      "Description": "S3 bucket for asset"
    },
    "DeploymentKey": {
      "Type": "String",
      "Description": "S3 key for asset version"
    },
    "Table": {
      "Type": "String",
      "Description": "Name of dynamodb table"
    }
  },
  "Outputs": {
    "LambdaName": {
      "Value": {
        "Ref": "LambdaGo"
      }
    }
  }
}
